<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#82008577"/>
            <!--<stroke android:width="3dp" android:color="#008577" />-->
            <corners android:radius="100dp"/>
            <padding android:left="0dp" android:top="10dp" android:right="0dp" android:bottom="10dp"/>
        </shape>
    </item>
    <item
            android:bottom="1dp"
            android:left="20dp"
            android:right="20dp"
            android:top="1dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <corners android:radius="100dp"/>
            <size android:width="10dp"/>
            <solid android:color="#43008577"/>
            <padding android:left="-20dp" android:top="-20dp" android:right="-20dp" android:bottom="-20dp"/>
        </shape>
    </item>
</layer-list>
